<form class="" action="/recipes/<%=@recipe.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Name: <input type="text" name="name" value="<%=@recipe.name%>"></label><br>
  <label>Ingredients: <input type="text" name="ingredients" value="<%=@recipe.ingredients%>"></label><br>
  <label>Cooking Time: <input type="text" name="cook_time" value="<%=@recipe.cook_time%>"></label><br>
  <input type="submit" name="" value="Submit" id="submit">
</form>
