<h1>Edit your recipe!</h1>
<h2><%= @recipe.name %></h2>
<h3><%= @recipe.ingredients %></h3>
<h3><%= @recipe.cook_time %></h3>
<br>
<form method="post" action="/recipes/<%=@recipe.id%>" class="edit_recipe">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label>Enter recipe name: <input type="text" name="name" value="<%= @recipe.name %>"></label>
  <label>Enter ingredients: <input type="text" name="ingredients" value="<%= @recipe.ingredients %>"></label>
  <label>Enter cooking time: <input type="text" name="cook_time" value="<%= @recipe.cook_time %>"></label>
  <input type="submit" value="submit" id="submit">
</form>
